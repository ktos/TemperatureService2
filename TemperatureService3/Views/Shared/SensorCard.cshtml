@model SensorViewModel

<div class="card">
    <div class="header">
        <h4 class="title"><a asp-action="Sensor" asp-controller="Home" asp-route-name="@Model.Name">@Model.Name</a></h4>
        @if (Model.Type == SensorType.Temperature)
        {
            <p class="category"><i class="ms-Icon ms-Icon--Frigid"></i> @Model.Description</p>
        }
        else
        {
            <p class="category"><i class="ms-Icon ms-Icon--Flower"></i> @Model.Description</p>
        }
    </div>
    <div class="content">
        @if (Model.Type == SensorType.Temperature)
        {
            <h2 class="title">@Model.Data.ToString("F1")°C</h2>
        }
        else
        {
            <h2 class="title">@Model.Data.ToString("F0")</h2>
        }

        <div class="footer">
            <hr>
            <div class="stats">
                <span title="@Model.LastUpdated"><i class="ms-Icon ms-Icon--Clock"></i> @Model.LastUpdated.Humanize()</span>
                <i class="ms-Icon @(Model.Status ? "ms-Icon--SkypeCircleCheck" : "ms-Icon--StatusErrorFull")" title="Status: @Model.Status"></i>
                @{
                    if (Model.Trend == Difference.Lowering)
                    {
                        <i class=""></i>
                    }
                    else if (Model.Trend == Difference.Rising)
                    {
                        <i class="fa fa-level-up-alt"></i>
                    }
                }
            </div>
        </div>
    </div>
</div>