@model MenuViewModel

<li class="@(Model.Active == null ? "active" : "")">
    <a asp-action="Index" asp-controller="Home">
        <i class="ms-Icon ms-Icon--PieDouble"></i>
        <p>Dashboard</p>
    </a>
</li>
@foreach (var item in Model.Sensors)
{
    <li class="@(Model.Active?.Name == item.Name ? "active" : "")">
        <a asp-action="Sensor" asp-controller="Home" asp-route-name="@item.Name">
            <i class="ms-Icon ms-Icon--ChevronRightSmall"></i>
            <p>@item.Name</p>
        </a>
    </li>
}