@model TemperatureService3.ViewModels.SensorViewModel

@{
    ViewData["Title"] = "Sensor";
}

@section Menu
    {
    <li>
        <a asp-action="Index" asp-controller="Home">
            <i class="pe-7s-graph"></i>
            <p>Dashboard</p>
        </a>
    </li>
    @*@foreach (var item in Model.Sensors)
        {
            <li>
                <a asp-action="Sensor" asp-controller="Home" asp-route-name="@item.Name">
                    <i class="pe-7s-angle-right-circle"></i>
                    <p>@item.Name</p>
                </a>
            </li>
        }*@
}

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="header">
                    <h4 class="title">@Model.Name</h4>
                    <p class="category">@Model.Description</p>
                </div>
                <div class="content">
                    <h2 class="title">@Model.Data.ToString("F1")°C</h2>

                    <div class="footer">
                        <hr>
                        <div class="stats">
                            <i class="fa fa-clock-o"></i> @Model.LastUpdated.Humanize(culture: new System.Globalization.CultureInfo("pl-PL"))
                            <i class="fa @(Model.Status ? "fa-check-circle" : "fa-times-circle")" title="Status: @Model.Status"></i>
                            @{
                                if (Model.DifferenceFromPrevious == Difference.Lowering)
                                {
                                    <i class="fa fa-level-down"></i>
                                }
                                else if (Model.DifferenceFromPrevious == Difference.Rising)
                                {
                                    <i class="fa fa-level-up"></i>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="content">
                    <p><strong>@Html.DisplayNameFor(model => model.Name)</strong>: @Model.Name</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Description)</strong>: @Model.Description</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Id)</strong>: @Model.Id</p>
                    <p><strong>@Html.DisplayNameFor(model => model.Type)</strong>: @Model.Type</p>
                </div>
            </div>
        </div>
    </div>