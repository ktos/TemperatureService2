@model IndexViewModel

@foreach (var item in Model.Sensors)
{
    <div class="col-md-3">
        <div class="card">
            <div class="header">
                <h4 class="title">@item.Name</h4>
                <p class="category">@item.Description</p>
            </div>
            <div class="content">
                <div id="chartPreferences" class="ct-chart ct-perfect-fourth"></div>
                <div class="footer">                    
                    <hr>
                    <div class="stats">
                        <i class="fa fa-clock-o"></i> @item.LastUpdated
                    </div>
                </div>
            </div>
        </div>
    </div>
}