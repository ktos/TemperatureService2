@model IndexViewModel

@section Menu
    {
    <li class="active">
        <a asp-action="Index" asp-controller="Home">
            <i class="pe-7s-graph"></i>
            <p>Dashboard</p>
        </a>
    </li>
    @foreach (var item in Model.Sensors)
    {
        <li>
            <a asp-action="Sensor" asp-controller="Home" asp-route-name="@item.Name">
                <i class="pe-7s-angle-right-circle"></i>
                <p>@item.Name</p>
            </a>
        </li>
    }
}

@foreach (var item in Model.Sensors)
{
    <div class="col-md-3">
        <partial name="SensorCard" model="item" />
    </div>
}